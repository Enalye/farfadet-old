{
	"name": "farfadet",
	"authors": [
		"Enalye"
	],
	"description": "Image Editor",
	"copyright": "Copyright Â© 2018, Enalye",
	"dependencies": {
		"atelier": {
			"version": "~master",
			"path": "../atelier"
		}
	},
	"targetType": "executable",
	"workingDirectory": "..",
	"configurations": [
		{
			"name": "linux-build",
			"platforms": ["linux"],
			"targetPath": "../bin$ARCH",
			"postBuildCommands": [
				"cp ../lib$ARCH/*.dll ../bin$ARCH"
			]
		},
		{
			"name": "windows-build",
			"platforms": ["windows"],
			"targetPath": "../bin$ARCH",
			"postBuildCommands": [
				"copy ..\\lib$ARCH\\*.dll ..\\bin$ARCH"
			]
		}
	]
}